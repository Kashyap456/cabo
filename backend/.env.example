# Backend Environment Configuration
# Copy this file to .env and update the values as needed

# Database Configuration
POSTGRES_DB=cabo_db
POSTGRES_USER=cabo_user
POSTGRES_PASSWORD=cabo_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5433

# Constructed Database URL (used by SQLAlchemy and Alembic)
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://cabo_user:cabo_password@localhost:5433/cabo_db

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
# Full Redis URL (used by RedisManager)
REDIS_URL=redis://localhost:6379/0

# FastAPI Configuration
DEBUG=true
# IMPORTANT: Change this secret key in production!
SECRET_KEY=your-secret-key-here-change-in-production